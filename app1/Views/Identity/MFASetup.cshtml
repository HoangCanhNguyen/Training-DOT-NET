@model MFAViewModel
<p>
    Please enter the code below in your authenticator application
</p>
<p>
    @Model.Token
</p>
<p>
    Or you can scan this QR code with your phone
</p>
<div id="qrcode"></div>

<form asp-controller="Identity" asp-action="MFASetup" method="post">
    <input type="hidden" asp-for="Token"/>
    <div>
        Enter Code: <input type="text" asp-for="Code"/>
    </div>

    <button type="submit">Submit</button>
</form>

@section Scripts {
    <script type="text/javascript">
    new QRCode(document.getElementById("qrcode"), "@Model.QrcodeUrl");
</script>
}